<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    <title>Notícias cadastradas</title>
</head>
<body>
    <div id="header">
        <a href="/">Home</a>
        <a href="/noticias">Notícias</a>
        <a href="/contatos">Contatos</a>
        <a href="/abrigos">Abrigos</a>
        <a href="/update">Atualizar dados</a>
        <% if (!admin) { %>
            <a href="/admin">Login administrador</a>
        <% } else { %>
            <a href="/admin">Menu admin</a>
            <a href="/logout">Logout</a>
        <% } %>
    </div>
    <h1>Notícias cadastradas</h1>
    <% noticias.forEach(noticia => { %>
        <% let data = new Date(noticia.data_noticia).toLocaleString('en-US', { timeZone: 'Europe/Rome' }) %>
        <% data = new Date(data) %>
        <a href="/noticias?id=<%= noticia.idnoticia %>"><h2><%= noticia.tipo_noticia %> no bairro <%= noticia.bairro_afetado %> - <%= data.getDate() + "/" + (data.getMonth() + 1) + "/" + data.getFullYear() %></h2></a>
    <% }) %>
</body>
</html>